<odoo>
    <data>

        <record model="ir.ui.view" id="view_order_form_inherited">
            <field name="name">Sale Order Form View Inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="managers_id" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="state_confirm" widget="statusbar" clickable="True" string=" "/>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">

                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,confirmed_line"/>

                </xpath>

                <xpath expr="//field[@name='amount_untaxed']" position="before">

                    <field name="total_state" invisible="1"/>

                </xpath>
                <xpath expr="//header" position="replace">
                <header>
                    <button name="action_quotation_send" string="Send by Email" type="object" states="confirmed_line" class="btn-primary"/>
                    <button name="action_quotation_send" type="object" string="Send PRO-FORMA Invoice" groups="sale.group_proforma_sales" class="btn-primary" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('invoice_count','&gt;=',1)]}" context="{'proforma': True}"/>
                    <button name="print_quotation" string="Print" type="object" states="confirmed_line" class="btn-primary o_sale_print"/>
                    <button name="action_confirm" id="action_confirm" string="Confirm Sale" class="btn-primary" type="object" states="confirmed_line"/>
                    <button name="action_confirm" string="Confirm Sale" type="object" attrs="{'invisible': [('state', 'in', ['draft','sent','sale','confirmed_line','done'])]}"/>
                    <button name="action_quotation_send" type="object" string="Send PRO-FORMA Invoice" groups="sale.group_proforma_sales" attrs="{'invisible': ['|', ('state', '=', 'draft'), ('invoice_count','&gt;=',1)]}" context="{'proforma': True}"/>
                    <button name="print_quotation" string="Print" type="object" attrs="{'invisible': [('state', 'in', ['draft','done','sent','sale','confirmed_line'])]}" class="o_sale_print"/>
                    <button name="action_quotation_send" string="Send by Email" type="object" attrs="{'invisible': [('state', 'in', ['draft','done','sent','sale','confirmed_line'])]}"/>
                    <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Quotation"/>
                    <button name="action_done" type="object" string="Lock" states="sale" help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver."/>
                    <button name="action_unlock" type="object" string="Unlock" states="done" groups="sales_team.group_sale_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale"/>
                </header>
               </xpath>


            </field>
        </record>

    </data>
</odoo>