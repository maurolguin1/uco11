<odoo>
    <data>
       <record model="ir.ui.view" id="res_currency_rate_form_view">
            <field name="name">res.currency.rate</field>
            <field name="model">res.currency.rate</field>
             <field name="inherit_id" ref="base.view_currency_rate_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="replace">
                    <field name="rate"/>
                </xpath>


            </field>
         </record>

        <record model="ir.ui.view" id="res_currency_form_view">
            <field name="name">res.currency</field>
            <field name="model">res.currency</field>
             <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="replace">
                    <field name="rate"/>
                </xpath>


            </field>
         </record>
    </data>
</odoo>